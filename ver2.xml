<?xml version="1.0"	encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="@drawable/bg1"
    >

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Votre Information"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />


    <TableRow
        android:id="@+id/tr_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/tv_nom"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Nom:"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"	/>
        <EditText
            android:id="@+id/et_nom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="nom"
            android:padding="10dp"
            android:background="@drawable/border1"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tr_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"	>
        <TextView
            android:id="@+id/tv_prenom"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Prenom:"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"	/>
        <EditText
            android:id="@+id/et_prenom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Prenom"
            android:padding="10dp"
            android:background="@drawable/border1"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tr_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"	>
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"	/>
        <EditText
            android:id="@+id/et_age"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="age"
            android:padding="10dp"
            android:background="@drawable/border1"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tr_competence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"	>
        <TextView
            android:id="@+id/tv_competence"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Competence:"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"	/>
        <EditText
            android:id="@+id/et_competence"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="competence"
            android:padding="10dp"
            android:background="@drawable/border1"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tr_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"	>
        <TextView
            android:id="@+id/tv_numero"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Numero:"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"	/>
        <EditText
            android:id="@+id/et_numero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="numero"
            android:padding="10dp"
            android:textColor="@color/purple_500"
            android:background="@drawable/border1"
            android:inputType="phone"
            />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/btn_valider"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</TableLayout>
